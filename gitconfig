[core]
	excludesfile = ~/.gitignore
	editor = "emacs -nw"
[includeIf "gitdir:~/"]
  path = .gitconfig-personal
[includeIf "gitdir:~/projects/work/"]
	path = .gitconfig-work
[credential]
	helper = osxkeychain
	helper =
	helper = /usr/local/share/gcm-core/git-credential-manager
