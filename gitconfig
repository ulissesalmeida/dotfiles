	user = ulissesalmeida
[push]
	default = simple
[pull]
	default = rebase
	rebase = true
[fetch]
	prune = true
[alias]
	duffel = !git config user.email ulisses@duffel.com
	save = !git add -A && git commit -m wip
	undo = reset --soft HEAD^
	patch = add -p
