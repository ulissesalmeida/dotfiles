  ui = true
  interactive = true
  status = true
  branch = true
  diff = true
[apply]
  whitespace = fix
[gpg]
	program = gpg
[commit]
	gpgsign = true
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
